<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#accc">

    <Button
        android:id="@+id/click_btn_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_locate_green"
        android:drawableLeft="@drawable/main_icon"
        android:textSize="18sp"
        android:text="双击居中" />

    <Button
        android:id="@+id/top_hint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_locate_blue"
        android:text="按中提示框拖拽到任意位置"
        android:textSize="18sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bottom_hint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/call_locate_blue"
        android:text="按中提示框拖拽到任意位置"
        android:textSize="18sp"
        android:visibility="visible" />
</RelativeLayout>
